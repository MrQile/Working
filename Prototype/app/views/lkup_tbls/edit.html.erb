<% if session[:cmd_id]==0 %>
  <% breadcrumb :lkup_edit, @lkup_infos %>
<% else %>
  <% breadcrumb :edit_lkup, [@base_cmds,@lkup_infos] %>
<% end %>

<h1 data-value="<%= @lkup_infos.LKUP_TBL_TYPE %>">EDIT LKUPTBL </h1>
<%= form_for(@lkups) do |f| %>

  <%= f.hidden_field :LKUP_TBL_NO, :value => @lkups.LKUP_TBL_NO %>

  <%= f.label :LKUP_ENTRY_INDEX %>
  <%= f.text_field :LKUP_ENTRY_INDEX, class: 'form-control' %>

  <%= f.label :BYTE_CODE%>
  <%= f.text_field :BYTE_CODE, class: 'form-control' %>

  <%= f.label :VALUE%>
  <%= f.text_field :VALUE, class: 'form-control' %>
  <div class="value_error_text"></div>

  <%= f.submit 'Update', class: "btn btn-primary" %>
<% end %>