<% breadcrumb :new_form_data, @base_cmds %>
<h1 onload="location.reload(true);">CREATE FORM_LOGIC_PART_DATA_TBL </h1>
<div class="perfect-forms">
<%= form_for(@form_logic_data) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

	<%= f.hidden_field :CMD_ID, :value => @form_logic_data.CMD_ID %>

	<div class="form-row">
	<%= f.label :PART_NO %>
	<%= f.text_field :PART_NO, class: 'form-control' %>
	</div>

	<div class="form-row">
	<%= f.label :LOGIC_LEVEL %>
	<%= f.text_field :LOGIC_LEVEL, class: 'form-control'%>
	<div id="details_holder" data-original_1="<%=@form_logic_data.CMD_ID%>" data-original_2="<%=@form_logic_data.PART_NO%>" data-original_3="<%=@form_logic_data.LOGIC_LEVEL%>"></div>
	</div>


	<div class="form-row">
	<%= f.label :LOGIC_PART_NO %>
	<%= f.text_field :LOGIC_PART_NO, class: 'form-control'%>
	</div>

	<div class="form-row">
	<%= f.label :FORM_LOGIC_PART_TYPE %>
	<%= f.collection_select(:FORM_LOGIC_PART_TYPE, FORM_LOGIC_PART_TYPE_TBL.all, :FORM_LOGIC_PART_TYPE, :FORM_LOGIC_PART_TYPE, {:prompt => "Please select"},{class: 'form-control'})%></br>
	</div>

	<div class="form-row">
		<%= f.label :PART_MNEMONIC%>
		<%= f.text_field :PART_MNEMONIC, class: 'form-control' %>
	</div>


	<div id="radio_button_for_logic">
		<input id="all" type="radio" name="sub_logic_selector" checked="checked">
		<label for="all">All</label>
		<input id="formation_logic" type="radio" name="sub_logic_selector">
		<label for="formation_logic">Formation Logic</label>
	</div>

	<div class="form-row" id="all_sub_logic">
		<%= f.hidden_field :SUB_LOGIC_TYPE, :value => "ALL", id: "all_hidden_field", class: 'form-control'%>
	</div>

	<div class="form-row" id="form_sub_logic">
		<%= f.label :SUB_LOGIC_TYPE %>
		<%= f.collection_select(:SUB_LOGIC_TYPE, FORMATION_LOGIC_TBL.all, :FORMATION_LOGIC, :FORMATION_LOGIC, {:prompt => "Please select"},{class: 'form-control'})%></br>
	</div>

	<div class="form-row" id="PART_SELECTOR">
		<%= f.label :PART_TYPE %>
		<%= f.collection_select(:PART_TYPE, CMD_PART_TYPES_TBL.all, :CMD_PART_TYPE, :CMD_PART_TYPE, {:prompt => "Please select"},{class: 'form-control'})%></br>
	</div>

	<div class="form-row" id="user_data">
	<%= f.label :USER_DATA %>
	<%= f.text_field :RESOLUTION, class: 'form-control', id: 'USER_DATA' %>
	</div>

	<div class="form-row" id="bit_sel_tbl">
	<%= f.label :BIT_SEL_TBL_INFO %>
	<%= f.collection_select(:RESOLUTION, BIT_SEL_TBL_INFO.all, :BIT_SEL_TBL_NO, :BIT_SEL_TBL_NAME, {:prompt => "Please select"},{class: 'form-control', id: 'BIT_SEL_TBL_INFO'})%><%= link_to "Doesn't exist?", new_bit_sel_tbl_info_path%>
	</div>

	<div class="form-row" id="lkup_tbl">
	<%= f.label :LKUP_TBL_INFO %>
	<%= f.collection_select(:RESOLUTION, LKUP_TBL_INFO.all, :LKUP_TBL_NO, :LKUP_TBL_NAME, {:prompt => "Please select"},{class: 'form-control', id: 'LKUP_TBL_INFO'})%><%= link_to "Doesn't exist?", new_lkup_tbl_info_path%>
	</div>

	<div class="hidden-attrs">
		<div class="form-row">
		<%= f.label :START_BIT %>
		<%= f.text_field :START_BIT, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :NO_OF_BITS%>
		<%= f.text_field :NO_OF_BITS, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :PART_MASK %>
		<%= f.text_field :PART_MASK, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :OFFSET%>
		<%= f.text_field :OFFSET, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :INPUT_FORMAT %>
		<%= f.collection_select(:INPUT_FORMAT, INPUT_FORMAT_TBL.all, :INPUT_FORMAT, :INPUT_FORMAT, {:prompt => "Please select"},{class: 'form-control'})%>
		</div>
		<div class="form-row">
		<%= f.label :LL %>
		<%= f.text_field :LL, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :UL%>
		<%= f.text_field :UL, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :UNITS %>
		<%= f.text_field :UNITS, class: 'form-control' %>
		</div>
		<div class="form-row">
		<%= f.label :REMARKS%>
		<%= f.text_field :REMARKS, class: 'form-control' %>
		</div>
	</div>

	<div class="form-row">
		<%= f.submit 'Create', class: "btn btn-primary" %>
		</div>
<% end %>
</div>