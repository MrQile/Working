<% if session[:cmd_id]==0 %>
  <% breadcrumb :expr_new, @base_cmds %>
<% else %>
  <% breadcrumb :new_expr,@base_cmds %>
<% end %>

<h1>CREATE EXPRESSION </h1>
<div class="perfect-forms">
  <%= form_for(@exprs) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-row">
      <%= f.label :EXPR_ID %>
      <%= f.text_field :EXPR_ID, class: 'form-control' %>
    </div>

    <div class="form-row">
      <%= f.label :EXPR_TYPE %>
      <%= f.collection_select(:EXPR_TYPE, EXPR_TYPE_TBL.all, :ID, :EXPR_TYPE, {:prompt => "Please select"},{class: 'form-control'})%>
      <div id="details_holder" data-original_1="<%=@exprs.EXPR_ID%>" data-original_2="<%=@exprs.EXPR_TYPE%>"></div>
    </div>

    <div class="form-row">
      <%= f.label :TM_PID%>
      <%= f.text_field :TM_PID, class: 'form-control' %>
    </div>

    <div class="form-row">
      <%= f.label :REL_OP%>
      <%= f.collection_select(:REL_OP, REL_OP_TBL.all, :REL_OP, :REL_OP, {:prompt => "Please select"},{class: 'form-control'})%>
    </div>

    <div class="form-row">
      <%= f.label :VALUE_TYPE%>
      <%= f.collection_select(:VALUE_TYPE, VALUE_TYPE_TBL.all, :VALUE_TYPE, :VALUE_TYPE, {:prompt => "Please select"},{class: 'form-control'})%>
    </div>

    <div class="form-row">
      <%= f.label :VALUE%>
      <%= f.text_field :VALUE, class: 'form-control' %>
      <div class="value_error_text"></div>
    </div>

    <div class="form-row">
      <%= f.submit 'Create', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>