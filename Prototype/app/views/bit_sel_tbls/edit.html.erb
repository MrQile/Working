<% if session[:cmd_id]==0 %>
  <% breadcrumb :bit_sel_edit, @bit_infos %>
<% else %>
  <% breadcrumb :edit_bit_sel, [@base_cmds,@bit_infos] %>
<% end %>
<div class="perfect-forms">
<h1>EDIT BIT_SEL_TBL </h1>
<%= form_for(@bit_sels) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :BIT_SEL_TBL_NO, :value => @bit_sels.BIT_SEL_TBL_NO %>

<div class="form-row">
  <%= f.label :FIELD_NO %>
  <%= f.text_field :FIELD_NO, class: 'form-control' %>
</div>
 
<div class="form-row">
  <%= f.label :START_BIT%>
  <%= f.text_field :START_BIT, class: 'form-control' %>
</div>

<div class="form-row">
  <%= f.label :NO_OF_BITS %>
  <%= f.text_field :NO_OF_BITS, class: 'form-control' %>
</div>

<div class="form-row">
  <%= f.label :BIT_MASK %>
  <%= f.text_field :BIT_MASK, class: 'form-control' %>
</div>

<div class="form-row">
  <%= f.label :VALUE %>
  <%= f.text_field :VALUE, class: 'form-control' %>
</div>
<div class="form-row">
  <%= f.label :FIELD_MNEMONICS%>
  <%= f.text_field :FIELD_MNEMONICS, class: 'form-control' %>
</div>
<div class="form-row">
  <%= f.label :VALUE_MNEMONICS%>
  <%= f.text_field :VALUE_MNEMONICS, class: 'form-control' %>
</div>
<div class="form-row">
  <%= f.label :LOGICAL_OP%>
  <%= f.collection_select(:LOGICAL_OP, LOGICAL_OP_TBL.all, :LOGICAL_OP, :LOGICAL_OP, {:prompt => "Please select"},{class: 'form-control'})%>
</div>
<div class="form-row">
  <%= f.submit 'Update', class: "btn btn-primary" %>   
</div>
<% end %>
</div>