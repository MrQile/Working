<% if session[:cmd_id]==0 %>
	<% breadcrumb :bit_info_edit, @bit_infos %>
<% else %>
	<% breadcrumb :edit_bit_sel_info, [@base_cmds,@bit_infos] %>
<% end %>

<% content_for(:option_bar) do %>
  <%= render 'shared/option_list' %>
<% end %>

<h1>EDIT BIT_SEL_TBL_INFO </h1>
<div class="perfect-forms">

	<%= form_for(@bit_infos) do |f| %>

 	 <%= render 'shared/error_messages', object: f.object %>
	<div class="form-row">
	  <%= f.label :BIT_SEL_TBL_NO %>
	  <%= f.text_field :BIT_SEL_TBL_NO, class: 'form-control' %>
	  </div>

	<div class="form-row"> 
	  <%= f.label :BIT_SEL_TBL_NAME %>
	  <%= f.text_field :BIT_SEL_TBL_NAME, class: 'form-control' %>
	</div>

	<div class="form-row">
	  <%= f.submit 'Update', class: "btn btn-primary" %>
	</div>
	
	<% end %>
</div>
