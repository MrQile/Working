<h1>LOG IN!</h1>
<div class="perfect-forms">
	<%= form_for(:session, url: login_path, method: :post) do |f| %>


		<div class="form-row">
			<%= f.label :name %>
			<%= f.text_field :name%>
		</div>

		<div class="form-row">
			<%= f.label :password %>
			<%= f.password_field :password%>
		</div>

		<div class="form-row">
			<%= f.label :satellite %>
			<%= f.select :satellite, options_for_select(SATELLITE_TABLE.pluck(:SATNAME)), {}%>
		</div>

		<div class="form-row">
			<%= f.label :host %>
			<%= f.text_field :host, value: "localhost"%>
		</div>	

		<div class="advanced_options">

			<div class="form-row">
				<%= f.label :database_name %>
				<%= f.text_field :database_name%>
			</div>
		
			<div class="form-row">
				<%= f.label :database_username %>
				<%= f.text_field :database_username%>
			</div>

			<div class="form-row">
				<%= f.label :database_password %> 
				<%= f.password_field :database_password%>
			</div>


		</div>

		<div class="form-row btn-group btn-group-sm">

  			<span id="advanced_button" class="btn btn-warning">Advanced Options</span>
			<%= f.submit "Log In", class: "btn btn-primary" %>

		</div>

	<% end %>

</div>